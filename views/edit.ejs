<body>
    <h1>Edit Post</h1>
    <form action="/posts/<%=post._id%>?_method=PUT" method="POST">
        <!--  NOTE: the form is pre-populated with values for the server-->
        Name: <input type="text" name="title" value="<%=post.title%>" /><br />
        Image: <img src="<%=post.img%>"><br>
        <input type="text" name="img" id="img" value="<%=post.img%>" /><br />
        <input type="submit" value="Submit Changes" />
    </form>
</body>